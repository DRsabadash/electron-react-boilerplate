{
  "name": "cra",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "build": {
    "asar": false,
    "appId": "your.id",
    "productName": "Freshenator",
    "directories": {
      "buildResources": "./build",
      "output": "dist",
      "app": "./"
    }
  },
  "dependencies": {
    "@craco/craco": "^4.1.0",
    "@material-ui/core": "^3.9.3",
    "electron-packager": "^13.1.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.2",
    "react-router-dom": "^5.0.0",
    "react-scripts": "2.1.8",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "source-map-support": "^0.5.12"
  },
  "scripts": {
    "start": "craco start",
    "electron": "electron .",
    "electron-dev": "cross-env NODE_ENV=development concurrently --kill-others  \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000/ && electron .\"",
    "electron-build": "cross-env NODE_ENV=production concurrently \"npm run build && electron .\"",
    "electron-prod": "cross-env NODE_ENV=production electron .",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.1.4",
    "electron-builder": "^20.39.0",
    "node-sass": "^4.11.0",
    "typescript": "^3.4.4",
    "wait-on": "^3.2.0"
  }
}
